<ul data-parent-ul>
  {{#each contentArray as |item index|}}
    <li class="list-item {{if (eq index activeItem) 'active' }}" data-item-index={{index}}>
      {{#if hasBlock}}
        {{yield item}}
      {{else}}
        {{#if hasLink}}
          {{#link-to linkDirection item.id}}
            {{display-property item objectKey}}
          {{/link-to}}
        {{else}}
          {{display-property item objectKey}}
        {{/if}}
      {{/if}}
    </li>
  {{/each}}
</ul>
